<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="#99FFFFFF"

    android:weightSum="7"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        app:cardCornerRadius="12dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="top"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:elevation="5dp"
        >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@android:color/white"
            >
            <ImageView
                android:id="@+id/navShow2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="95dp"
                android:layout_marginRight="100dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:onClick="navShow"
                android:src="@drawable/ic_list_black_24dp"
                />
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="search "
                android:textSize="19dp"
                android:onClick="searchText"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="#858F2D"
                android:textAlignment="textStart"
                app:layout_constraintHorizontal_bias="0.14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_weight="7"
                />





            <com.mikhaellopez.circularimageview.CircularImageView

                android:id="@+id/profilePhoto"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_gravity="end"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <FrameLayout

        android:id="@+id/fragment_contanair"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="6"

        >


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            style="@style/Widget.Design.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#EDEAFD"
            app:layout_anchor="@+id/include"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:srcCompat="@drawable/ic_add_blue_24dp"
            tools:ignore="VectorDrawableCompat" />
    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_weight="1"
        android:background="#fff"
        app:itemIconTint="#0057FF"

        app:menu="@menu/navigation" />
</LinearLayout>